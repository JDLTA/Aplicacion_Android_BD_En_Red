<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txtDato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Dato a buscar"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rbGr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/lsl_consulta"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="28dp">

                    <RadioButton
                        android:id="@+id/rbNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Num. Control"
                        tools:layout_editor_absoluteX="276dp"
                        tools:layout_editor_absoluteY="72dp" />

                    <RadioButton
                        android:id="@+id/rbNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        tools:layout_editor_absoluteX="127dp"
                        tools:layout_editor_absoluteY="64dp" />

                    <RadioButton
                        android:id="@+id/rbPrimerAp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primer Ap"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="65dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </LinearLayout>

            <ListView
                android:id="@+id/lsl_consulta"
                android:layout_width="wrap_content"
                android:layout_height="539dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" >

            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>